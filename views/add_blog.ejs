<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs:AP</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css" />

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tiny.cloud/1/g7kezn8r83118myex2vw2gq7ll5qgqbzj3enqhdfc6f3hpzq/tinymce/6/tinymce.min.js"
        referrerpolicy="origin"></script>
  </head>
  <style>
    * {
  font-family: 'Noto Sans';
}
body{
        font-family: 'Roboto';
    }
    
body{
  background:#FFE3AA;
}
/* text colors */
.text-primary {
  color: #275473;
}

.text-blueish {
  color: #0962ea;
}

/* bg colors */
.bg-primary {
  background-color: #C77E2E;
}

.bg-avatar {
  background-color: #d9d9d9;
}

.bg-light {
  background-color: #f4f4f4;
}

/* border colors */
.border-primary {
  border-color: #FFCB00  ;
}

.border-menu {
  border-color: #C77E2E;
}

/* sidebar styles */
.side-navbar {
  border-top: 5vw solid transparent;
  border-left: 70px solid #FCF4DF;
  
  border-bottom: 5vw solid transparent;
}
  </style>
  <body>
    <div class="h-screen w-full flex">
      <!-- sidebar -->
      <%-include('partials/admin_side_bar')%>

      <!-- right section -->
      <div class="w-full">
        <!-- header section -->
        <header class="flex justify-between items-center  border-primary p-5" >
          <div class="flex items-center">
          <img src="../public/images/AP_logo.svg" alt="">
          <h2 class="font-bold text-2xl ml-4">Blogs</h2>
          </div>
          <button class="bg-light rounded-lg font-bold px-5 py-2 " data-modal-target="blogModal" data-modal-toggle="blogModal">Add New Blog+</button>
          <div class="flex items-center gap-2">
            <b>Hello, User</b>
            <img
              src="../public/images/AP_avatar.svg"
              alt="user icon"
              class="rounded-full h-10 bg-avatar"
            />
          
          </div>
        </header>

        <!-- top menu section  -->
       
       
      
    <div class=" my-12 mx-auto px-4 md:px-12">
        <div class="flex flex-wrap -mx-1 lg:-mx-4">
    
           <!--cards-->
  <%  blogs.forEach(element => { %>
      
      <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
        <div class="flex mx-4 justify-between">
            <a href="" class="font-bold text-2xl">Blogs</a>
              <div class="flex">
                <a href="/admin/delete_blog?id=<%=element._id%>"><img src="../public/images/AP_delete.svg" alt="" class="w-[2rem] mr-2"> </a>
                <a href="/admin/get_edit_blog?id=<%=element._id%>"><img src="../public/images/AP_note.svg" alt=""> </a>
              </div> 
          </div>
          <!--Image Artilce-->
          <div class="overflow-hidden rounded-lg ">
  
              <div >
                  <img alt="cards1" class="block h-[20rem] w-full rounded" src="<%=element.path%>"> 
              </div>
  
              <div class="flex items-center justify-between pt-2  md:py-4">
                 
                      <p class="border border-slate-600 px-4 rounded-full poppins" >
                          <%=element.title%>
                      </p>
            
                  <p class="text-grey-darker text-sm poppins">
                      <%=element.date%>
                  </p>
              </div>                         
          </div>
          <!-- END Article -->
      </div>
  
    
  <%}) %>
    
          
          </div>
       </div>
    </div>
      
    

    
    <!-- Main modal -->
    <div id="blogModal" tabindex="-1" aria-hidden="true"
        class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative w-full  max-h-full bg-slate-50">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <!-- Modal header -->
                <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-xl font-semibold font-roboto text-[#CC9B2B] text-center">
                       Add New Blog
                    </h3>
                    <button type="button"
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                        data-modal-hide="blogModal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                </div>
                <!-- Modal body -->
                <div>
                  <div class="mt-8 md:text-left flex justify-center  lg:mt-4 sm:mt-0 ">
                    <div class="h-full w-full  space-y-5    pt-4  rounded-lg shadow px-4 " >
                      <form class="space-y-6 " action="/admin/add_blog" method="post" enctype="multipart/form-data">
                        <div>
                          <label for="name" class="block mb-2 mt-8 text-lg text-black bold">Title of the blog<b class="text-red-600">*</b></label >
                          <input
                            type="name"
                            name="title"
                            class=" text-black text-sm  block w-full p-2.5 border border-yellow-600"
                            required
                            
                          />
                        </div>
                         
                        <div>
                          <label for="email" class="block mb-2 text-lg text-black bold"
                            >Category of the blog<b class="text-red-600">*</b></label >
                            <select name="category" id=""   class=" text-black text-sm block  w-full p-2.5 border border-yellow-600">
                                <option value="blended_learning">Blended Learning</option>
                                <option value="cuet">CUET</option>
                                <option value="class_11_and_12">CLASS 11 AND 12</option>
                                <option value="class_9_and_10">CLASS 9 AND 10</option>
                                <option value="hybrid">HYBRID</option>
                                <option value="iit_jee">IIT JEE</option>
                                <option value="neet">NEET</option>
                                <option value="offline">OFFLINE</option>
                                <option value="online">ONLINE</option>
                                <option value="skill_development">SKILL DEVELOPMENT</option>
                              </select>
                        </div>
                       
                        
                       
                        <div>
                            <label for="email" class="block mb-2 text-lg text-black bold"
                              >Upload your document<b class="text-red-600">*</b></label >
                              <div class="h-12 w-full bg-white justify-items-center">
                            <input
                              type="file"
                              name='document'
                              accept="document/*"
                              class=" text-black text-sm  block w-full p-2.5 border border-yellow-600"
                              required  />
                            </div>
                          </div>
                          
                          <div>
                            <label for="msgg" class="block mb-2 text-lg text-black bold"
                              >Description<b class="text-red-600">*</b></label>
                              <textarea name="textarea" id="myTextarea"></textarea>
                          </div>
                            <input type="hidden" id="result" name="description">
                        <div>
                          <button class="float-right text-black border-2 border-yellow-600 rounded-lg font-bold text-xl  py-2 px-10 mb-2" type="submit" onclick="logHtmlContent()">
                            Submit
                          </button>
                        </div>
            
                        <br />
                      </form>
                    </div>
                  </div>
            
                </div>
            </div>
        </div>
    </div>
  
    <!--form sec end-->
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
  </body>
  
  <script>
      tinymce.init({
                selector: '#myTextarea',
                plugins: 'ai tinycomments mentions anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed permanentpen footnotes advtemplate advtable advcode editimage tableofcontents mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
                toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
                mergetags_list: [
                  { value: 'First.Name', title: 'First Name' },
                  { value: 'Email', title: 'Email' },
                ],
                ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant"))
            });
            function logHtmlContent()
            {
                 var myContent = tinymce.activeEditor.getContent('#myTextarea');
                 document.getElementById('result').value=myContent
            }
  </script>
</html>
